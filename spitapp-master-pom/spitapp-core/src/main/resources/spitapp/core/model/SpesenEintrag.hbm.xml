<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="spitapp.core.model.SpesenEintrag" table="SPESEN"
		catalog="spitapp">
		<id name="SpesenEintID" type="java.lang.Long">
			<column name="SpesenEintID" />
			<generator class="identity" />
		</id>
		<property name="SpesenDesc" type="string">
			<column name="SpesenDesc" length="100" not-null="true" />
		</property>		
		<property name="Price" type="double">
			<column name="Price" not-null="true" />
		</property>
	</class>
</hibernate-mapping>