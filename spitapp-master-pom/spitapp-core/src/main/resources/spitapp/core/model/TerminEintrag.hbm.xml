<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="spitapp.core.model.TerminEintrag" table="TERMIN_EINTRAG"
		catalog="spitapp">
		<id name="terminId" type="java.lang.Long">
			<column name="termin_id" />
			<generator class="identity" />
		</id>
		<property name="beschreibung" type="string">
			<column name="beschreibung" length="20" not-null="true" />
		</property>
		 <list name="patienten" cascade="all">
            <key column="patient_id"/>
            <index column="idx"/>
            <one-to-many class="spitapp.core.model.Patient"/>
        </list>
	</class>
</hibernate-mapping>